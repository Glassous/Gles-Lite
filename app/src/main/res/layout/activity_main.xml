<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F7"
    android:fitsSystemWindows="true">

    <!-- 顶部网址栏 -->
    <LinearLayout
        android:id="@+id/urlBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/blurred_background"
        android:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/urlEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="输入网址或搜索"
            android:text="https://www.bing.com"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:padding="10dp"
            android:background="@drawable/rounded_white_background"
            android:textSize="16sp"
            android:textColor="#1C2526"
            android:textColorHint="#8A8A8E"
            android:maxHeight="48dp"
            android:singleLine="false"
            android:maxLines="2"
            android:ellipsize="end"
            app:cornerRadius="12dp" />

        <!-- 使用ImageButton替代MaterialButton -->
        <ImageButton
            android:id="@+id/clearButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="@color/hint_gray"
            android:src="@drawable/ic_clear"
            android:scaleType="center"
            android:contentDescription="清除" />

        <ImageButton
            android:id="@+id/goButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="#007AFF"
            android:src="@drawable/ic_go"
            android:scaleType="center"
            android:contentDescription="前往" />
    </LinearLayout>

    <!-- 加载条 -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:progressDrawable="@drawable/progress_drawable"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/urlBar"
        android:background="#00000000"
        android:animationResolution="200" />

    <!-- WebView -->
    <WebView
        android:id="@+id/webView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        tools:background="#FFFFFF" />

    <!-- 全屏视频容器 -->
    <FrameLayout
        android:id="@+id/fullscreenContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/closeFullscreenButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            android:background="@drawable/rounded_button_background"
            android:backgroundTint="#8E8E93"
            android:src="@drawable/ic_close"
            android:scaleType="center"
            android:contentDescription="关闭全屏" />
    </FrameLayout>

    <!-- 右下角悬浮按钮 -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_gray_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/forwardButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_arrow_right"
            app:backgroundTint="#8E8E93"
            app:rippleColor="#D1D1D6"
            app:fabCustomSize="48dp"
            android:scaleType="center"
            android:alpha="0.8"
            android:contentDescription="前进"
            android:tooltipText="前进" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_arrow_left"
            app:backgroundTint="#8E8E93"
            app:rippleColor="#D1D1D6"
            app:fabCustomSize="48dp"
            android:scaleType="center"
            android:alpha="0.8"
            android:contentDescription="后退"
            android:tooltipText="后退" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/refreshButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_refresh"
            app:backgroundTint="#007AFF"
            app:rippleColor="#34C759"
            app:fabCustomSize="48dp"
            android:scaleType="center"
            android:alpha="0.8"
            android:contentDescription="刷新"
            android:tooltipText="刷新" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/settingsButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_gear"
            app:backgroundTint="#8E8E93"
            app:rippleColor="#D1D1D6"
            app:fabCustomSize="48dp"
            android:scaleType="center"
            android:alpha="0.8"
            android:contentDescription="设置"
            android:tooltipText="设置" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>